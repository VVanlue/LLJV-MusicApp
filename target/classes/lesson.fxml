<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lljvmusicapp.controller.LessonController"
      stylesheets="@/styles.css"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Choose Difficulty Level:" />
    <ComboBox fx:id="levelBox" promptText="Select Difficulty" />

    <Label text="Choose Lesson:" />
    <ComboBox fx:id="lessonBox" promptText="Select Lesson" />

    <Label fx:id="questionLabel" wrapText="true" />

    <VBox fx:id="choicesBox" spacing="5" />

    <Button fx:id="continueButton" onAction="#handleContinue" text="Continue" />
    <Label fx:id="feedbackLabel" textFill="green" />

</VBox>
