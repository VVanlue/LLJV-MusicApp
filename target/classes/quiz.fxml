<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lljvmusicapp.controller.QuizController"
      stylesheets="@/styles.css"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">

    <Label fx:id="questionLabel" prefHeight="75.0" prefWidth="184.0" style="-fx-font-size: 16; -fx-font-weight: bold;" wrapText="true" />
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
      <buttons>
         <Button fx:id="optionA" mnemonicParsing="false" prefHeight="27.0" prefWidth="78.0" text="A" />
         <Button fx:id="optionB" mnemonicParsing="false" text="B" />
         <Button fx:id="optionC" mnemonicParsing="false" text="C" />
         <Button fx:id="optionD" mnemonicParsing="false" text="D" />
      </buttons>
   </ButtonBar>

</VBox>
