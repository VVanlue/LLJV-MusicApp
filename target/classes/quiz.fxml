<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lljvmusicapp.controller.QuizController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">

    <Label fx:id="questionLabel" wrapText="true" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <VBox fx:id="choicesBox" spacing="10" alignment="CENTER_LEFT" />

    <Label fx:id="feedbackLabel" style="-fx-text-fill: green; -fx-font-size: 14;" />

    <Button fx:id="nextButton" text="Next" onAction="#handleNextQuestion" disable="true" />

</VBox>