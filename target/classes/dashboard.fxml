<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lljvmusicapp.controller.DashboardController"
      spacing="20" alignment="CENTER" style="-fx-padding: 30;">
    
    <Label fx:id="welcomeLabel"
           text="Welcome!"
           style="-fx-font-size: 24; -fx-text-fill: #333333;"/>

    <HBox spacing="20" alignment="CENTER">
        <VBox spacing="10" alignment="CENTER">
            <Label text="Favorite Songs" style="-fx-font-size: 18;"/>
            <ListView fx:id="favSongsList" prefWidth="200" prefHeight="150"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER">
            <Label text="Current Lessons" style="-fx-font-size: 18;"/>
            <ListView fx:id="lessonsList" prefWidth="200" prefHeight="150"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER">
            <Label text="Completed Lessons" style="-fx-font-size: 18;"/>
            <ListView fx:id="completedLessonsList" prefWidth="200" prefHeight="150"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER">
            <Label text="Featured Songs" style="-fx-font-size: 18;"/>
            <ListView fx:id="songsList" prefWidth="200" prefHeight="150"/>
        </VBox>
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Start Lesson Quiz" onAction="#handleStartLessonQuiz" style="-fx-pref-width: 200;"/>
        <Button text="Play Notes" onAction="#handleGoToSongScreen" style="-fx-pref-width: 200;"/>
        <Button text="Return to Login" onAction="#handleReturnToLogin" style="-fx-pref-width: 200;"/>
    </HBox>

</VBox>