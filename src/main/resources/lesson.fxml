<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lljvmusicapp.controller.LessonController"
      stylesheets="@/styles.css"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Choose Difficulty Level:" />
    <ComboBox fx:id="levelBox" promptText="Select Difficulty" />

    <Label text="Choose Lesson:" />
    <ComboBox fx:id="lessonBox" promptText="Select Lesson" />

    <Label fx:id="questionLabel" wrapText="true" />

    <VBox fx:id="choicesBox" spacing="5" />

    <Button fx:id="continueButton" text="Continue" onAction="#handleContinue" />
    <Label fx:id="feedbackLabel" textFill="green" />

</VBox>